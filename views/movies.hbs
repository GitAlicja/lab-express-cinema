<div class="headline-container">
    <h2>Ironhack Cinema</h2>
    <p>Click on the movie to check the showtimes!</p>
</div>


<div class="main-movies-container">
    {{#each allTheMovies}}
    <div>
        <img src="{{this.image}}">
        <h4>{{this.title}}</h4>
        <a href="/movies/{{this._id}}">See more</a>
        {{!-- <p>{{this.description}}</p> --}}
    </div>
    {{/each}}
</div>